<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EditActivty">

    <LinearLayout
        android:id="@+id/line2"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:padding="25dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_imgcamera"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_round"/>

        <ImageView
            android:id="@+id/img_addImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_camera"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="8dp"
            android:text="Username"
            android:textStyle="bold"
            android:textColor="@color/colorredpink"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="edit Username"
            android:textColor="@color/black"
            android:inputType="text"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/email"
            android:textStyle="bold"
            android:textColor="@color/colorredpink"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_emailet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="edit email"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"/>

        <TextView
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textStyle="bold"
            android:text="@string/password"
            android:textColor="@color/colorredpink"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_passet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="edit Password"
            android:textColor="@color/black"
            android:inputType="text"/>

        <Button
            android:id="@+id/btn_saveedit"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_round"
            android:text="Save"
            android:textAllCaps="false"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"/>

    </LinearLayout>






</RelativeLayout>